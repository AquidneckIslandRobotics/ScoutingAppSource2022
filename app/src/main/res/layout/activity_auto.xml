<?xml version="1.0" encoding="utf-8"?><!DOCTYPE RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auto"
    android:background="@color/black">




    <TextView
        android:id="@+id/highCounterAutoTxt"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="87dp"
        android:text="0"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"/>

    <Button
        android:id="@+id/minusHighAutoPts"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="620dp"
        android:text="-"
        android:textSize="50sp" />

    <Button
        android:id="@+id/plusHighAutoPts"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="620dp"
        android:layout_toEndOf="@+id/highCounterAutoTxt"
        android:text="+"
        android:textSize="50sp" />



    <TextView
        android:id="@+id/HighPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/highCounterAutoTxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="98dp"
        android:text="High Points"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"/>

    <TextView
        android:id="@+id/lowCounterAutoTxt"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="279dp"
        android:layout_marginTop="87dp"
        android:text="0"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"/>

    <Button
        android:id="@+id/plusLowAutoPts"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="620dp"
        android:layout_toEndOf="@+id/highCounterAutoTxt"
        android:text="+"
        android:textSize="50sp" />

    <Button
        android:id="@+id/minusLowAutoPts"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="233dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="-276dp"
        android:layout_marginBottom="620dp"
        android:layout_toStartOf="@+id/lowCounterAutoTxt"
        android:text="-"
        android:textSize="50sp" />

    <Button
        android:id="@+id/FinishAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/highCounterAutoTxt"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/RadioGroupDriving"
        android:text="Finish Auto" />

    <TextView
        android:id="@+id/LowPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/highCounterAutoTxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="232dp"
        android:layout_marginBottom="98dp"
        android:text="Low Points"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"/>

    <RadioGroup
        android:id="@+id/RadioGroupDriving"
        android:layout_width="wrap_content"
        android:layout_height="159dp"
        android:layout_below="@+id/minusHighAutoPts"
        android:layout_marginTop="-600dp">

        <RadioButton
            android:id="@+id/DriveFalse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="SpotPicker"
            android:text="Did not Drive"
            android:checked="true"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/DriveTrue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="SpotPicker"
            android:text="Drove"
            android:textColor="@color/white" />




    </RadioGroup>

</RelativeLayout>