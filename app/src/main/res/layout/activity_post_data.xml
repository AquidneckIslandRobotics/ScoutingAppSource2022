<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postData"
    android:background="@color/black">

    <RadioGroup
        android:id="@+id/DisabledGroup"
        android:layout_width="180dp"
        android:layout_height="151dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="608dp">

        <RadioButton
            android:id="@+id/notDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Not Disabled"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disabled"
            android:textColor="@color/white"
            android:textSize="30dp"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/Penalties"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="323dp">

        <RadioButton
            android:id="@+id/noPenalties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="No Penalties"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/somePenalties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penalties"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </RadioGroup>

    <Button
        android:id="@+id/toSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="177dp"
        android:text="Go to Submit"
        android:textSize="30dp" />

</RelativeLayout>